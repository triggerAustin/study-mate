{
  "builds": [
    {
      "src": "app/wsgi.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "app/wsgi.py": {
      "runtime": "python3.12",
      "env": {
        "STUDY_MATE_MYSQL_USER": "your_mysql_user",
        "STUDY_MATE_MYSQL_PWD": "your_mysql_password",
        "STUDY_MATE_MYSQL_HOST": "your_mysql_host",
        "STUDY_MATE_MYSQL_DB": "your_database_name"
      }
    }
  },
  "buildCommand": "apt-get update && apt-get install -y libmysqlclient-dev && pip3.12 install --disable-pip-version-check --upgrade -r app/requirements.txt"
}

